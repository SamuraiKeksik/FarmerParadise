@{
    ViewData["Title"] = "Дополнительная карта";
    int mainNumber = (int)ViewData["MainNumber"];
    string suffix = ViewData["LetterSuffix"].ToString();
}

<h2 style="text-align: center;">Дополнительная карта для @mainNumber</h2>

<div id="grid-container" style="display: flex; justify-content: center; align-items: center; margin-top: 20px;">
    <table class="table table-bordered" style="width: auto; margin: auto; text-align: center;">
        @for (int row = 0; row < 10; row++)
        {
            <tr>
                @for (int col = 0; col < 10; col++)
                {
                    int cellNumber = row * 10 + col + 1;
                    <td style="width: 50px; height: 50px; vertical-align: middle; text-align: center;">
                        @(cellNumber.ToString() + suffix)
                    </td>
                }
            </tr>
        }
    </table>
</div>

<a href="@Url.Action("Map", "Home")" class="btn btn-primary" style="display: block; width: 200px; margin: 20px auto; text-align: center;">Назад</a>
<style>
    /* Зелёная обводка при наведении на ячейку */
    table.table-bordered td:hover {
        border: 2px solid green !important;
    }
</style>